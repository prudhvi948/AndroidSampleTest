<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_coding_tasks"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coding_tasks"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/chat"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:text="CODING TASKS"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/chat"
        android:layout_centerHorizontal="true"
        android:onClick="onChatButtonClicked"
        android:layout_above="@+id/login"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:background="@drawable/btn_main_chat"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/login"
        android:layout_centerVertical="true"
        android:onClick="onLoginButtonClicked"
        android:layout_alignLeft="@+id/chat"
        android:layout_alignStart="@+id/chat"
        android:background="@drawable/btn_main_login"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/animation"
        android:layout_centerHorizontal="true"
        android:onClick="onAnimationTestButtonClicked"
        android:layout_below="@+id/login"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/btn_main_animation"/>
</RelativeLayout>
